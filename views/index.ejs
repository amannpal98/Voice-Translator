<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <title><%= title %></title>
    <meta name="description" content="<%= description %>">
    <meta name="keywords" content="<%= keywords %>">
    <meta name="author" content="<%= author %>">
    <link rel="stylesheet" href="/stylesheets/demotemplate.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<header>
    <img src="/images/logo.svg">
</header>
<div id="parrot-1">
    <img src="/images/parrot1.svg" role="presentation">
</div>
<div align="center" style="width: 160%;margin-left: -30%;">
    <div class="round-button">
        <a id="control" status="paused" onclick="control(this);">
            <img id="status" src="/images/start.svg"/>
        </a>
    </div>
</div>
<div class="options" id="container">
    <center>
        <div class="option">
            <span for="language">From</span>
            <select name="language" id="language" class="dropdown dropdown--language" aria-label="language"></select>
            <span for="voice">To</span>
            <select name="voice" id="voice" class="dropdown dropdown--voice"></select>
        </div>
    </center>
</div>
    <div style="position:fixed;top:50%;right:2%;transform:translateY(-50%);width:32%;z-index:10;">
        <div id="display-area" style="text-align:left;transition:max-height 0.5s cubic-bezier(.4,0,.2,1);">
            <div id="spoken-text" style="background:#fff;border-radius:8px;padding:1rem;margin-bottom:1rem;min-height:2rem;color:#001129;font-size:1.2rem;">
                <strong>Spoken:</strong> <span id="spokenContent"></span>
            </div>
            <div id="translated-text" style="background:#e6f7ff;border-radius:8px;padding:1rem;min-height:2rem;color:#167d3e;font-size:1.2rem;">
                <strong>Translation:</strong> <span id="translatedContent"></span>
            </div>
        </div>
    </div>
<div id="support-message" class="support-message"></div>
<img src="/images/soundwave.svg" role="presentation" class="soundwave">
<script src="/javascripts/typed.js"></script>
<script src="/javascripts/Parrot.js"></script>
<script src="/javascripts/Parrot.core.js"></script>
<script>
    var parrot = new Parrot();
    parrot.isSupported();
    setInterval(function(){
       parrot.loadOptions();
    },900);
    function control(e){
     if(e.getAttribute('status') == "paused"){
         parrot.SpeechRecognition(1);
     }else{
         parrot.SpeechRecognition(0);
     }
    }

    // Expand display-area when translation is processing or text is written
    function expandDisplayArea(expand) {
        var displayArea = document.getElementById('display-area');
        if (displayArea) {
            if (expand) {
                displayArea.style.maxHeight = '400px';
            } else {
                displayArea.style.maxHeight = '120px';
            }
        }
    }
</script>
</body>
</html>